<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rick_and_morty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/houston</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/main_green</item>
        <item name="colorOnPrimary">@color/main_green</item>
        <item name="colorControlActivated">@color/main_green</item>
        <item name="android:textColorSecondary">@color/main_green</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:textColorHint">@color/main_green</item>
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_item_color</item>
        <item name="itemIconTint">@color/bottom_item_color</item>
        <item name="rippleColor">@color/main_background</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>